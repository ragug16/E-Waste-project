{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "estree"]  // ✅ Include node + estree types
  },
  "include": ["server/**/*.ts"], // ✅ Ensure TypeScript includes your server files
  "exclude": ["node_modules", "dist"] // ✅ Avoid unnecessary compilation
}
